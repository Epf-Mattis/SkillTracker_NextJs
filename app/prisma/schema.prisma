generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  skills    Skill[]
  goals     Goal[]
  quizzes   Quiz[] // Remplacez QuizResult[] par Quiz[]
}

model Skill {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  level       SkillLevel @default(BEGINNER)
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model Goal {
  id          Int      @id @default(autoincrement())
  description String
  deadline    DateTime
  completed   Boolean  @default(false)
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
}

model Quiz {
  id        Int      @id @default(autoincrement())
  question  String
  options   Json     // Stocke les options comme un tableau JSON
  answer    String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}



enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}
